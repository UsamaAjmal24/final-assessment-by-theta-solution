@model FinalAssessment.Models.Sales

@if (ViewBag.Message != null)
{
    <h1 class="alert alert-success">@ViewBag.Message</h1>
}

<h2>AddNewSale</h2>

<h4>Sales</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddNewSale">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ItemId" class="control-label"></label>
                <input asp-for="ItemId" class="form-control" />
                <span asp-validation-for="ItemId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomersId" class="control-label"></label>
                <input asp-for="CustomersId" class="form-control" />
